<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/material_background1"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/header_left_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Imagen de perfil -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image"
        android:layout_width="@dimen/perfil_image_size"
        android:layout_height="@dimen/perfil_image_size"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/perfil3"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="1dp" />

    <!-- Nombre de Usuario -->
    <TextView
        android:id="@+id/usernameheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Juan Alfonzo"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold" />

    <!-- Correo de la cuenta
    style="@style/Widget.AppCompat.Spinner"-->
    <TextView
        android:id="@+id/cargoheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supervisor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>